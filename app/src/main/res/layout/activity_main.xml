<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:padding="1dp"
        android:layout_weight="1"
        android:background="@drawable/drowing_layout"
        >

        <ImageView
            android:id="@+id/iv_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="background Image"
            android:scaleType="centerCrop"


            >

        </ImageView>

        <com.ak.drawingapp.DrawingView
            android:id="@+id/DrowingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:background="#80FFFFFF"
            />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_point_colors"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"


        >
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"
            android:background="@color/skin"
            android:contentDescription="color pallate"
            style="@style/Widget.AppCompat.Button"
            android:src="@drawable/pallet_normal"
            android:tag="@color/skin"
            android:onClick="paintCliked"
            />
         <!-- balck -->
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"
            android:background="@color/black"
            android:contentDescription="color pallate"
            style="@style/Widget.AppCompat.Button"
            android:src="@drawable/pallet_normal"
            android:tag="@color/black"
            android:onClick="paintCliked"

            />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"
            android:background="@color/red"
            android:contentDescription="color pallate"
            style="@style/Widget.AppCompat.Button"
            android:src="@drawable/pallet_normal"
            android:tag="@color/red"
            android:onClick="paintCliked"
            />
        <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="3dp"
        android:background="@color/green"
        android:contentDescription="color pallate"
        android:src="@drawable/pallet_normal"
            style="@style/Widget.AppCompat.Button"
        android:tag="@color/green"
            android:onClick="paintCliked"
        />
        <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="3dp"
        android:background="@color/blue"
        android:contentDescription="color pallate"
            style="@style/Widget.AppCompat.Button"
        android:src="@drawable/pallet_normal"
        android:tag="@color/blue"
            android:onClick="paintCliked"
        />
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"
            android:background="@color/yellow"
            android:contentDescription="color pallate"
            style="@style/Widget.AppCompat.Button"
            android:src="@drawable/pallet_normal"
            android:tag="@color/yellow"
            android:onClick="paintCliked"
            />
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"
            android:background="@color/lollipop"
            android:contentDescription="color pallate"
            style="@style/Widget.AppCompat.Button"
            android:src="@drawable/pallet_normal"
            android:tag="@color/lollipop"
            android:onClick="paintCliked"
            />


    </LinearLayout>
<LinearLayout
    android:id="@+id/ll_action_buttons"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <Button
        android:id="@+id/id_brush"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text=" B size"
        android:contentDescription="Brush Size"
        />
    <Button
        android:id="@+id/id_gallery"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Gallery"
        android:contentDescription="gallery image"
        />

    <Button
        android:id="@+id/id_Undo"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Undo"
        android:contentDescription="Undo image"
        />

    <Button
        android:id="@+id/id_Save"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Save"
        android:contentDescription="Undo image"
        />

</LinearLayout>




</LinearLayout>